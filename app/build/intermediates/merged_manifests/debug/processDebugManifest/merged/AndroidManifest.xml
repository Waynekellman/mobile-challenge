<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nyc.c4q.vice.mobile" >

    <uses-sdk
        android:minSdkVersion="25"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="nyc.c4q.vice.mobile.ViceApp"
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="nyc.c4q.vice.mobile.ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nyc.c4q.vice.mobile.ui.DetailsActivity" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="nyc.c4q.vice.mobile.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>